{
  "$schema": "http://json.schemastore.org/template",
  "author": "Chris Butler",
  "classifications": ["Common", "Web"],
  "identity": "Chris.Butler",
  "name": "Template-Spike",
  "shortName": "template-spike",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "TemplateSpike",
  "preferNameDirectory": true,
  "symbols": {
    "database": {
      "type": "parameter",
      "description": "The database choice for the project.",
      "datatype": "choice",
      "allowMultipleValues": true,
      "choices": [
        {
          "choice": "Cosmos",
          "description": "Cosmos"
        },
        {
          "choice": "Mongo",
          "description": "Mongo"
        }
      ],
      "defaultValue": ""
    },
    "useCosmos": {
      "type": "computed",
      "datatype": "bool",
      "value": "database == 'Cosmos'"
    },
    "useMongo": {
      "type": "computed",
      "datatype": "bool",
      "value": "database == 'Mongo'"
    }
  },
	"sources": [
		{
			"source": "./",
			"include": [
				"**/*"
			],
			"exclude": [
				"**/[Bb]in/**",
				"**/[Oo]bj/**",
				"**/.template.config/**",
				"**/*.filelist",
				"**/*.user",
				"**/*.lock.json",
				"**/.git/**",
				"**/.vs/**",
				"**/.vscode/**",
				"_rels/**",
				"package/**",
				"**/*.nuspec",
				"*Content_Types*.xml",
        "**/Infrastructure/**"
			],
      "modifiers": [
        {
          "condition": "useCosmos",
          "include": [
            "**/Infrastructure/Cosmos/**"
          ]
        },
        {
          "condition": "useMongo",
          "include": [
            "**/Infrastructure/Mongo/**"
          ]
        }
      ]
    }
  ]
}